{
  "manifest_version": 3,

  "name": "Chrome Tabs to Google Tasks",
  "description": "Helps declutter your Chrome browser by adding tabs to Google Tasks and closing them",
  "version": "0.0.1",

  "options_ui": {
    "page": "options.html"
  },

  "oauth2": {
    "client_id": "__GOOGLE_CLIENT_ID__",
    "scopes": [
      "https://www.googleapis.com/auth/tasks.readonly"
    ]
  },

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Chrome Tabs to Google Tasks"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "tabs",
    "identity"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}

{
  "manifest_version": 3,
  "name": "Chrome Tabs to Google Tasks",
  "description": "Helps declutter your Chrome browser by adding tabs to Google Tasks and closing them",
  "version": "0.1.0",

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "oauth2": {
    "client_id": "__GOOGLE_CLIENT_ID__",
    "scopes": [
      "https://www.googleapis.com/auth/tasks"
    ]
  },

  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Chrome Tabs to Google Tasks"
  },

  "permissions": [
    "tabs",
    "identity"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
